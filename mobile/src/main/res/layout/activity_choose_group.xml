<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    tools:context="com.planit.mobile.ChooseGroupActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/background"
    android:backgroundTint="@color/background">

    <LinearLayout
        android:id="@+id/cg_ll_content"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/choose_group_rv_title"
        style="@style/HeaderStyle"
    />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cg_rv_groups"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        />

    <TextView
        android:id="@+id/cg_tv_group_null"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="no groups found"
        android:textStyle="italic"

        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cg_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1144529456090164/7028789777">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
